---
// Si est치s en un componente .astro, importa SITE_BASE desde tu config
import { SITE_BASE } from "../config";
---
<div class="container mt-4">
  <h2 class="mb-3">Recursos</h2>

  <!-- Acorde칩n principal -->
  <div class="accordion" id="mainAccordion">
    
    <!-- ABECEDARIO -->
    <div class="accordion-item">
      <h2 class="accordion-header" id="headingAbecedario">
        <button
          class="accordion-button"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#collapseAbecedario"
          aria-expanded="true"
          aria-controls="collapseAbecedario"
        >
          Abecedario
        </button>
      </h2>
      <div
        id="collapseAbecedario"
        class="accordion-collapse collapse show"
        aria-labelledby="headingAbecedario"
        data-bs-parent="#mainAccordion"
      >
        <div class="accordion-body text-center">
          <!-- Mantenemos la imagen, pero centrada y con tama침o fijo -->
          <img
            src={`${SITE_BASE}/abecedario.jpg`}
            class="img-thumbnail"
            alt="Abecedario"
            style="max-width: 240px; cursor: pointer;"
            data-bs-toggle="modal"
            data-bs-target="#imageModal"
          />
        </div>
      </div>
    </div>

    <!-- DICCIONARIO -->
    <div class="accordion-item">
      <h2 class="accordion-header" id="headingDiccionario">
        <button
          class="accordion-button collapsed"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#collapseDiccionario"
          aria-expanded="false"
          aria-controls="collapseDiccionario"
        >
          Diccionario
        </button>
      </h2>
      <div
        id="collapseDiccionario"
        class="accordion-collapse collapse"
        aria-labelledby="headingDiccionario"
        data-bs-parent="#mainAccordion"
      >
        <div class="accordion-body">
          <!-- Grid responsivo para videos -->
          <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-3">
            <!-- Video 1 -->
            <div class="col">
              <div class="card h-100">
                <div class="card-body">
                  <h5 class="card-title">Ayudar</h5>
                  <video
                    src={`${SITE_BASE}/videos/Ayudar.mp4`}
                    controls
                    class="w-100"
                  ></video>
                </div>
              </div>
            </div>
            <!-- Video 2 -->
            <div class="col">
              <div class="card h-100">
                <div class="card-body">
                  <h5 class="card-title">Aprender</h5>
                  <video
                    src={`${SITE_BASE}/videos/Aprender.mp4`}
                    controls
                    class="w-100"
                  ></video>
                </div>
              </div>
            </div>
            <!-- Video 3 -->
            <div class="col">
              <div class="card h-100">
                <div class="card-body">
                  <h5 class="card-title">Buscar</h5>
                  <video
                    src={`${SITE_BASE}/videos/Buscar.mp4`}
                    controls
                    class="w-100"
                  ></video>
                </div>
              </div>
            </div>
            <!-- Video 4 -->
            <div class="col">
              <div class="card h-100">
                <div class="card-body">
                  <h5 class="card-title">Comunicar</h5>
                  <video
                    src={`${SITE_BASE}/videos/Comunicar.mp4`}
                    controls
                    class="w-100"
                  ></video>
                </div>
              </div>
            </div>
          </div>

          <!-- Bot칩n para ir al diccionario completo -->
          <div class="text-center">
            <a href={`${SITE_BASE}`+`diccionario`} class="btn btn-primary">Ir al Diccionario completo</a>
          </div>
        </div>
      </div>
    </div>

  </div>

  <!-- Modal para imagen ampliada -->
  <div
    class="modal fade"
    id="imageModal"
    tabindex="-1"
    aria-labelledby="imageModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="imageModalLabel">Abecedario</h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Cerrar"
          ></button>
        </div>
        <div class="modal-body text-center">
          <img
            src={`${SITE_BASE}/abecedario.jpg`}
            class="img-fluid"
            alt="Imagen Abecedario ampliada"
          />
        </div>
      </div>
    </div>
  </div>
</div>
