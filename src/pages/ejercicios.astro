      }
      if (seleccionado.value === "opt3") {
        Swal.fire({
          icon: "success",
          title: "¡Correcto!",
          text: "La seña “Frotar la palma contra el mentón hacia abajo” corresponde a “Comer”.",
        });
      } else {
        Swal.fire({
          icon: "error",
          title: "Incorrecto",
          text: "Esa opción no es la seña correcta. Vuelve a intentarlo.",
