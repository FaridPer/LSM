      } else {
        Swal.fire({
          icon: "error",
          title: "Incorrecto",
          text: "Esa no es la seña correcta. Intenta otra vez.",
        });
      }
    });

    // Ejercicio 4: Casa (respuesta correcta: opt3)
    const formCasa = document.getElementById("form-casa");
    formCasa.addEventListener("submit", (e) => {
      e.preventDefault();
      const seleccionado = document.querySelector('input[name="casa"]:checked');
      if (!seleccionado) {
        Swal.fire({
          icon: "warning",
          title: "Atención",
          text: "Por favor, selecciona una opción.",
        });
        return;
      }
      if (seleccionado.value === "opt3") {
        Swal.fire({
          icon: "success",
          title: "¡Correcto!",
          text: "La seña “Unir ambas manos frente al pecho formando un triángulo” corresponde a “Casa”.",
        });
      } else {
        Swal.fire({
          icon: "error",
          title: "Incorrecto",
          text: "Intenta de nuevo. Esa opción no es la seña de “Casa”.",
        });
      }
    });

    // Ejercicio 5: Escuchar (respuesta correcta: opt1)
    const formEscuchar = document.getElementById("form-escuchar");
    formEscuchar.addEventListener("submit", (e) => {
      e.preventDefault();
      const seleccionado = document.querySelector('input[name="escuchar"]:checked');
      if (!seleccionado) {
        Swal.fire({
          icon: "warning",
          title: "Atención",
          text: "Por favor, selecciona una opción.",
        });
        return;
      }
      if (seleccionado.value === "opt1") {
        Swal.fire({
          icon: "success",
          title: "¡Correcto!",
          text: "La seña “Llevar la mano a la oreja y girar ligeramente” corresponde a “Escuchar”.",
        });
      } else {
        Swal.fire({
          icon: "error",
          title: "Incorrecto",
          text: "No es la seña correcta. Intenta otra vez.",
        });
      }
    });

    // Ejercicio 6: Comer (respuesta correcta: opt3)
    const formComer = document.getElementById("form-comer");
    formComer.addEventListener("submit", (e) => {
      e.preventDefault();
      const seleccionado = document.querySelector('input[name="comer"]:checked');
      if (!seleccionado) {
        Swal.fire({
          icon: "warning",
          title: "Atención",
          text: "Por favor, selecciona una opción.",
        });
