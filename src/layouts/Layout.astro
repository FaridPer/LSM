---
import { SITE_BASE } from '../config';
import Navbar from '../components/Navbar';
import Footer from '../components/Footer.astro';
import { ClientRouter } from 'astro:transitions';
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <slot name="head" />
    <link rel="icon" href={`${SITE_BASE}` + '/favicon.ico'} />
    <link rel="icon" type="image/svg+xml" href={`${SITE_BASE}` + '/logo.svg'} />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" defer></script>
    <ClientRouter/>
    <style is:global>
      body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(180deg, #FFF082 0%, #fff8d3 100%);
        color: #333;
      }

      h1, h2, h3 {
        font-weight: 700;
        color: #7026B9;
      }

      a {
        color: #7026B9;
        text-decoration: none;
      }

      a:hover {
        color: #4e2c7c;
        text-decoration: underline;
      }

      .lead {
        font-size: 1.2rem;
      }

      .carousel-item img {
        object-fit: cover;
        border-radius: 1rem;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        height: 350px;
      }

      .programa-curso {
        background: #ffffff;
        border-radius: 1rem;
        padding: 2rem;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        margin-top: 2rem;
      }

      .programa-curso h2 {
        margin-bottom: 1.5rem;
      }

      .accordion-button {
        background: #7026B9;
        color: #ffffff;
        border-radius: 0.5rem !important;
        margin-bottom: 0.5rem;
      }

      .accordion-button:not(.collapsed) {
        background: #4e2c7c;
        color: #ffffff;
      }

      .accordion-body {
        background: #fff8e1;
        border-radius: 0.5rem;
        padding: 1rem;
      }

      .img-fluid.align-right {
        border-radius: 1rem;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        margin-bottom: 2rem;
        padding: 10px;
        background: #fff;
      }

      .dotted-separator {
        border-top: 2px dashed #7026B9;
        margin: 3rem 0;
      }

      .footer-custom {
        background-color: #281E5D;
      }


      .footer-custom h5 {
        font-weight: 600;
        margin-bottom: 1rem;
      }

      .btn-outline-light {
        border-radius: 2rem;
        border-width: 2px;
      }

      .btn-purple {
        background-color: #7026B9;
        color: #fff;
        border: none;
        border-radius: 2rem;
        padding: 0.5rem 1.5rem;
      }

      .btn-purple:hover {
        background-color: #4e2c7c;
      }

      .carousel-container {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
      }

      .carousel-col {
        flex: 1 1 50%;
      }

      .programa-col {
        flex: 1 1 40%;
      }

      @media (max-width: 768px) {
        .carousel-col, .programa-col {
          flex: 1 1 100%;
        }
      }
    </style>
  </head>
  <body class="d-flex flex-column min-vh-100">
    <Navbar/>
    <slot />
    <Footer/>
  </body>
</html>
