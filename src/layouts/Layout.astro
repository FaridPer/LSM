---
import { SITE_BASE } from '../config';
import Navbar from '../components/Navbar';
import Footer from '../components/Footer.astro';
import { ClientRouter } from 'astro:transitions';
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <slot name="head" />
    <link rel="icon" href={`${SITE_BASE}` + '/favicon.ico'} />
    <link rel="icon" type="image/svg+xml" href={`${SITE_BASE}` + '/logo.svg'} />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" defer></script>
    <ClientRouter/>
    <style is:global>
      /*--------------------------------------------------
        PALETA BASADA EN #5F9ACA (Azul pastel de la navbar)
      --------------------------------------------------*/
      :root {
        --color-primary: #5F9ACA;        /* Azul pastel (navbar) */
        --color-primary-dark: #4A89D6;   /* Azul ligeramente más oscuro para hover */
        --color-secondary: #F0F4F8;      /* Gris muy claro con tinte azulado para fondos */
        --color-heading: #2B4972;        /* Azul marino suave para encabezados */
        --color-text: #333333;           /* Gris oscuro para texto principal */
        --color-accent: #FFC857;         /* Amarillo pastel como acento suave */
        --color-accordion-body: #E4F0FB;  /* Azul muy pálido para acordeón */
        --color-footer: #374785;         /* Azul marino más intenso para footer */
      }

      /*--------------------------------------------------
        BODY Y TIPOGRAFÍA
      --------------------------------------------------*/
      body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(180deg, var(--color-secondary) 0%, #FFFFFF 100%);
        color: var(--color-text);
        margin: 0;
        padding: 0;
      }

      /* Encabezados */
      h1, h2, h3 {
        font-weight: 700;
        color: var(--color-heading);
      }

      /* Enlaces globales */
      a {
        color: var(--color-primary);
        text-decoration: none;
      }
      a:hover {
        color: var(--color-primary-dark);
        text-decoration: underline;
      }

      /*--------------------------------------------------
        NAVBAR (mantiene el azul pastel original)
      --------------------------------------------------*/
      .navbar.my-navbar {
        background-color: var(--color-primary) !important;
      }
      .navbar .nav-link {
        color: #FFFFFF !important;
        font-weight: 500;
      }
      .navbar .nav-link:hover {
        color: var(--color-primary-dark) !important;
      }
      .navbar-toggler {
        border-color: #FFFFFF;
      }
      .navbar-toggler-icon {
        background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='white' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3E%3C/svg%3E");
      }
      .navbar-brand {
        width: 60px;
        margin: 0;
        padding: 0;
      }

      /*--------------------------------------------------
        TIPOGRAFÍA Y CONTENIDO
      --------------------------------------------------*/
      .lead {
        font-size: 1.2rem;
      }

      .carousel-item img {
        object-fit: cover;
        border-radius: 1rem;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        height: 350px;
      }

      .programa-curso {
        background: #FFFFFF;
        border-radius: 1rem;
        padding: 2rem;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        margin-top: 2rem;
      }
      .programa-curso h2 {
        margin-bottom: 1.5rem;
      }

      .accordion-button {
        background: #FFFFFF;
        color: var(--color-primary-dark);
        border-radius: 0.5rem !important;
        margin-bottom: 0.5rem;
      }
      .accordion-button:not(.collapsed) {
        background: var(--color-primary-dark);
        color: #FFFFFF;
      }
      .accordion-body {
        background: var(--color-accordion-body);
        border-radius: 0.5rem;
        padding: 1rem;
      }

      .img-fluid.align-right {
        border-radius: 1rem;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        margin-bottom: 2rem;
        padding: 10px;
        background: #FFFFFF;
      }

      .dotted-separator {
        border-top: 2px dashed var(--color-primary);
        margin: 3rem 0;
      }

      /*--------------------------------------------------
        FOOTER
      --------------------------------------------------*/
      .footer-custom {
        background-color: var(--color-footer);
        color: #FFFFFF;
        padding: 2rem 0;
      }
      .footer-custom h5 {
        font-weight: 600;
        margin-bottom: 1rem;
      }

      /*--------------------------------------------------
        BOTONES
      --------------------------------------------------*/
      .btn-outline-light {
        border-color: #FFFFFF !important;
        color: #FFFFFF !important;
        border-radius: 2rem;
        border-width: 2px;
      }
      .btn-outline-light:hover {
        background-color: rgba(255,255,255,0.1);
      }

      .btn-purple {
        background-color: var(--color-primary);
        color: #FFFFFF;
        border: none;
        border-radius: 2rem;
        padding: 0.5rem 1.5rem;
      }
      .btn-purple:hover {
        background-color: var(--color-primary-dark);
        color: #FFFFFF;
      }

      /*--------------------------------------------------
        LAYOUT REACTIVO
      --------------------------------------------------*/
      .carousel-container {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
      }
      .carousel-col {
        flex: 1 1 50%;
      }
      .programa-col {
        flex: 1 1 40%;
      }
      @media (max-width: 768px) {
        .carousel-col, .programa-col {
          flex: 1 1 100%;
        }
      }
    </style>
  </head>
  <body class="d-flex flex-column min-vh-100">
    <Navbar/>
    <slot />
    <Footer/>
  </body>
</html>
